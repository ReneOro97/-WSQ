#include <iostream>
#include <vector>

using namespace std;

int sumsquares_list (vector<int> x)
{
	int sum = 0;
	int result = 0;
	
	for (int i = 0; i < x.size(); i++)
	{
		result = x[i] * x[i];
		sum += result;
		
	}
	return sum;
}

int main (){
	int size = 0;
	int number = 0;
	vector <int> suma;
	cout << "Input size: " << endl;
	cin >> size;
	
	for (int i = 0; i < size; i++){
		cout << "Write the "<< i + 1<< "Â° number"<< endl;
		cin >> number;
		suma.push_back(number);
	}
	cout << "The result is: " << sumsquares_list(suma)<< endl;
	return 0;
}

